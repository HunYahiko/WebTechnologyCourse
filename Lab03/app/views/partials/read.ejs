
<section class="table-responsive-sm">
    <% reviews.forEach(function(review){ %>
        <form id="form<%= review.id %>"></form>
    <% }); %>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Review</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% reviews.forEach(function(review){ %>
            <tr>
                <td><%= review.id %></td>
                <td><input class="form-control" type="text" name="first_name" value="<%= review.first_name %>" form="form<%= review.id %>"></td>
                <td><input class="form-control" type="text" name="last_name" value="<%= review.last_name %>" form="form<%= review.id %>"></td>
                <td><input class="form-control" type="email" name="email" value="<%= review.email %>" form="form<%= review.id %>"></td>
                <td><textarea class="form-control" id="review" rows="3" name="review_text" form="form<%= review.id %>"><%= review.review_text %></textarea></td>
                <td><button type="button" class="btn btn-primary update-btn" id="<%= review.id %>" form="form<%= review.id %>">Update</button></td>
                <td><button type="button" class="btn btn-danger delete-btn" id="<%= review.id%>" form="form<%= review.id %>">Delete</button></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</section>
<script src="/js/read.js"></script>
